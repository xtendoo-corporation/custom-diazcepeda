<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_pricelist_view_inherit" model="ir.ui.view">
        <field name="name">product.pricelist.view.inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[2]/field[@name='base']" position="replace"/>
            <xpath expr="//tree[2]/field[@name='applied_on']" position="replace"/>
            <xpath expr="//tree[2]/field[@name='price']" position="replace">
                <field name="price" string="Precio" required='1' invisible="not compute_price == 'fixed'"
                       optional="show"/>
            </xpath>
            <xpath expr="//tree[2]/field[@name='price']" position="after">
                <field name="compute_price" string="Tipo CÃ¡lculo" optional="show"/>
                <field name="percent_price" invisible="not compute_price == 'percentage'" string="Desc %"
                       optional="show"/>
                <field name="base" invisible="not compute_price == 'formula'" optional="show"/>
                <field name="base_pricelist_id" invisible="not compute_price == 'formula' or not base == 'pricelist'"
                       string="Otra Tarifa" optional="show"/>
                <field name="price_discount" invisible="not compute_price == 'formula'" string="Desc %"
                       optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
