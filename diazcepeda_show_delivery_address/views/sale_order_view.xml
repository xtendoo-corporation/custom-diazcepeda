<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_tree_inherit_delivery_address" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.delivery.address</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='partner_id']" position="after">
                <field name="partner_shipping_id" string="Delivery Address" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
