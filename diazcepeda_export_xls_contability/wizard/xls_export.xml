<?xml version="1.0" ?>
<odoo>
    <record id="csv_export_view" model="ir.ui.view">
        <field name="name">XLS Export Contability</field>
        <field name="model">diazcepeda.export.xls.contability</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Informe de contabilidad">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button
                        name="export_file"
                        string="Importar"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_xls_export" model="ir.actions.act_window">
        <field name="name">Informe Contabilidad</field>
        <field name="res_model">diazcepeda.export.xls.contability</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_export_invoice_line_csv"
              name="Informe de contabilidad"
              parent="account.menu_finance"
              action="action_xls_export"/>

</odoo>
