<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_layout_invoice" inherit_id="web.external_layout_striped">
        <!--Header-->
        <xpath expr="//img[@t-if='company.logo']" position="replace">
            <img t-if="is_preprinted != 2" class="o_company_logo_big mb-2" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
        </xpath>

        <xpath expr="//div[@t-if='company.report_header']" position="replace">
            <div class="mt0 text-end h3" t-if="is_preprinted != 2" t-field="company.report_header">Company tagline</div>
        </xpath>

        <xpath expr="//ul[@name='company_address_list']" position="attributes">
            <attribute name="t-if">is_preprinted != 2</attribute>
        </xpath>

        <xpath expr="//div[@class='o_background_header']" position="attributes">
            <attribute name="t-if">not is_preprinted</attribute>
        </xpath>
        <!--Fin Header -->
        <!--Footer-->
        <xpath expr="//div[contains(@t-attf-class, 'o_background_footer')]//ul[contains(@class, 'list-inline')]" position="attributes">
            <attribute name="t-if">is_preprinted != 2</attribute>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'o_background_footer')]//div[contains(@class, 'text-muted')]" position="attributes">
            <attribute name="t-if">is_preprinted != 2</attribute>
        </xpath>
       <xpath expr="//div[@t-field='company.report_footer']" position="after">
<!--           <t t-set="is_getion_gastos" t-value="doc._is_gasto_gestion()"/>-->
            <div t-if="show_gastos_gestion" class="text-muted" style="margin-top:-23px;">
                <span>Este documento incluye 1 € de gastos de gestión.</span>
            </div>
        </xpath>
        <!--Fin Footer -->

    </template>
</odoo>
