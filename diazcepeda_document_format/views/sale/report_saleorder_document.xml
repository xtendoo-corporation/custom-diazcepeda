<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//th[@name='th_priceunit']" position="replace">
            <th name="th_priceunit" class="text-end">Precio</th>
        </xpath>
        <xpath expr="//td[@name='td_quantity']" position="replace">
            <td name="td_quantity" class="text-end">
                <span t-field="line.product_uom_qty">3</span>
            </td>
        </xpath>
         <xpath expr="//span[@t-field='doc.note']" position="after">
             <t t-set="show_gastos_gestion" t-value="doc._is_gasto_gestion()"/>
        </xpath>

         <xpath expr="//span[@name='order_note']" position="after">
            <t t-if="is_copy == 2">
                <p style="font-weight:bolder;color:black;">*Este documento es una copia.</p>
            </t>
        </xpath>
    </template>

      <!--Informe-->

    <record id="action_report_saleorder_copy" model="ir.actions.report">
        <field name="name">Presupuesto en PDF Copia</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">diazcepeda_document_format.report_saleorder_copy</field>
        <field name="report_file">diazcepeda_document_format.report_saleorder_raw</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
    <!--Fin Informe -->

    <template id="report_saleorder_copy">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="is_copy" t-value="2"/>
                <t t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
